{% if customer and customer.metafields.smile.vip_tier_name and customer.metafields.smile.vip_tier_name.value != blank %}
  {% assign vip_level = customer.metafields.smile.vip_tier_name.value | downcase %}
  {% assign found_block = false %}
  {% for block in section.blocks %}
    {% if block.settings.vip_level == vip_level %}
      {% assign found_block = true %}
      <div class="vip-status" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | image_url: width: block.settings.image.width }}"
            alt="{{ block.settings.heading | escape }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% endif %}
        {% if block.settings.heading != blank %}
          <h2>{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.text != blank %}
          <p>{{ block.settings.text }}</p>
        {% endif %}
      </div>
      {% break %}
    {% endif %}
  {% endfor %}
  {% unless found_block %}
    <div class="vip-status">
      {% if section.settings.fallback_image %}
        <img
          src="{{ section.settings.fallback_image | image_url: width: section.settings.fallback_image.width }}"
          alt="VIP"
          width="{{ section.settings.fallback_image.width }}"
          height="{{ section.settings.fallback_image.height }}"
        >
      {% endif %}
      <p>{{ section.settings.fallback_text }}</p>
    </div>
  {% endunless %}
{% endif %}

{% schema %}
{
  "name": "VIP Level Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback image for unknown VIP levels"
    },
    {
      "type": "text",
      "id": "fallback_text",
      "label": "Fallback VIP message",
      "default": "Welcome to the VIP Club!"
    }
  ],
  "blocks": [
    {
      "type": "vip_level",
      "name": "VIP Level",
      "settings": [
        {
          "type": "select",
          "id": "vip_level",
          "label": "VIP Level",
          "options": [
            { "value": "os legend", "label": "OS Legend" },
            { "value": "os icon", "label": "OS Icon" },
            { "value": "os hero", "label": "OS Hero" },
            { "value": "os member", "label": "OS Member" }
          ]
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "VIP Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VIP Level Display",
      "blocks": [{ "type": "vip_level" }, { "type": "vip_level" }]
    }
  ]
}
{% endschema %}
